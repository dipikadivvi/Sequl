#COUNT #SUM
Alter table sakila.film
select rental_duration from sakila.film
ADD Column cost_efficiency_dup1 DECIMAL(6,2);
SET SQL_SAFE_UPDATES =0;

UPDATE sakila.film
SET cost_efficiency_dup1= rental_duration *2
WHERE length is NOT NULL;


