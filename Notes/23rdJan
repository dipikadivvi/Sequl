#REVERSE(title)

#Length

#Substring with locate
Select email, SUBSTRING(email,LOCATE('@',email) +1) As Domain
from sakila.customer;

#Substring-index
Select Substring_index(email,'@',-1) from sakila.customer;

select email,
substring_index(SUBSTRING(email, LOCATE('@',email) +1), '.',-1) AS domain
FROM sakila.customer;

#UPPER,LOWER

#LEFT,RIGHT

If we put the aggregations then we must put them in  the groupby
SELECT Left(title,1) As First_letter, right(title,1) as Last_letter, title , COUNT(*) AS Film_Count
from sakila.film 
GROUP BY Left(title,2),right(title,3)
ORDER BY Film_Count DESC;


#CASE, IF,WHEN,ELSE
Select last_name
CASE
WHEN LEFT(last_name,1) BETWEEN 'A' AND 'M' THEN 'Group A_M'
WHEN LEFT(last_name,1) BETWEEN 'N' AND 'Z' THEN 'Group N_Z'
ELSE 'Other'
END AS group_label
from sakila.customer;

