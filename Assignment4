-- Joins
-- 1. List all customers along with the films they have rented.
select c.customer_id,c.first_name,c.last_name,f.film_id,f.title from 
sakila.customer c JOIN sakila.film f JOIN sakila.rental r
where r.customer_id = c.customer_id;

-- 2.List all customers and show their rental count, including those who haven't rented any films.
select c.customer_id,c.first_name,c.last_name,p.rental_id, p.amount,p.payment_id from
sakila.customer c LEFT JOIN sakila.payment p ON c.customer_id = p.customer_id;

-- 3. Show all films along with their category. Include films that don't have a category assigned.
select f.film_id,f.title,f.description,fc.category_id from
sakila.film_category fc Left JOIN sakila.film f ON f.film_id = fc.film_id;

-- 4. Show all customers and staff emails from both customer and staff tables using a full outer join (simulate using LEFT + RIGHT + UNION)
select c.email AS Customer_email,s.email AS Staff_email from sakila.customer c
LEFT JOIN sakila.staff s ON c.email = s.email
UNION
select c.email,s.email from sakila.customer C RIGHT JOIN sakila.staff s ON c.email = s.email;

-- 5. Find all actors who acted in the film "ACADEMY DINOSAUR".
select a.first_name,a.last_name,a.actor_id from sakila.actor a INNER JOIN sakila.film_actor fa
ON a.actor_id = fa.actor_id INNER JOIN sakila.film f ON f.film_id = fa.film_id
where f.title = 'ACADEMY DINOSAUR';

select a.first_name,a.last_name,a.actor_id from sakila.actor a JOIN sakila.film_actor fc JOIN sakila.film f ON
f.title = 'ACADEMY DINOSAUR';

-- 6.List all stores and the total number of staff members working in each store, even if a store has no staff.
select sto.store_id,count(sta.staff_id) AS Staff_members from sakila.store sto LEFT JOIN sakila.staff sta ON sto.store_id = sta.staff_id
GROUP BY sto.store_id;

-- 7. List the customers who have rented films more than 5 times. Include their name and total rental count.
select c.customer_id,c.first_name,c.last_name from sakila.customer c JOIN sakila.rental r ON
c.customer_id IN (select r.customer_id from sakila.rental r
GROUP by r.customer_id
having count(r.rental_id) >5);

